---
pagination:
  data: posts
  size: 1
  alias: post
permalink: "{{ post.full_slug }}/"
layout: layouts/base.liquid
eleventyComputed:
  title: "{{ post.content.title }}"
  description: "{{ post.content.description }}"
  banner: "{{ post.content.banner.filename }}"
---

{% assign content = post.content.content | resolveRichtext %}

<section class="section">
  <header class="blog-post__header">
    <figure class="image mb-4">
      <img src="{{ post.content.banner.filename }}" alt="{{ post.content.banner.alt }}">
    </figure>

    <div class="blog-post__headline">
      {% include partials/tags.liquid, tags: post.tag_list %}

      {% include partials/title.liquid, tag: 1, title: post.content.title %}

      <p>
        Publicado em {{ post.published_at | readableDate }} - {{ content | readableTimeToRead }}
      </p>
    </div>
  </header>

  <hr>

  <div class="content">
    {{ content }}
  </div>
</section>