<ul class="tags">
  {% assign internalTags = tags %}
  {% if max %}
    {% assign internalTags = tags | slice: 0, max %}
  {% endif %}
  {% for tag in internalTags %}
    <li class="tag is-dark">
      {% if asLink %}
        <a class="has-text-white" href="/tags/{{ tag | url }}">
          #{{ tag }}
        </a>
      {% else %}
        #{{ tag }}
      {% endif %}
    </li>
  {% endfor %}
</ul>