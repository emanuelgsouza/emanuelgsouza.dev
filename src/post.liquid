---
pagination:
  data: posts
  size: 1
  alias: post
permalink: "{{ post.full_slug }}/"
layout: layouts/base.liquid
eleventyComputed:
  title: "{{ post.data.title }}"
  description: "{{ post.data.description }}"
  banner: "{{ post.data.banner.filename }}"
---

{% assign content = post.data.content | resolveRichtext %}

<section class="section">
  <header class="blog-post__header">
    <figure class="image mb-4">
      <img width="800" height="450" src="{{ post.data.banner.filename }}" alt="{{ post.data.banner.alt }}">
    </figure>

    <div class="blog-post__headline">
      {% include partials/tags.liquid, tags: post.tag_list %}

      {% include partials/title.liquid, tag: 1, title: post.data.title %}

      <p>
        Publicado em {{ post.published_at | readableDate }} - {{ content | readableTimeToRead }}
      </p>

      {% if post.data.original_post != '' and post.data.original_post.url != '' %}
        <p>
          Texto originalmente publicado em <a href="{{ post.data.original_post.url }}" rel="noreferrer noopener">
            {{ post.data.original_post.url | getHostnameFromUrl }}
          </a>
        </p>
      {% endif %}
    </div>
  </header>

  <hr>

  <div class="content">
    {{ content }}
  </div>
</section>